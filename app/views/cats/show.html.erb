<h2><%=@cat.name%></h2>

<table style="width:20%">
  <tr>
    <th>Birth Date:</th>
    <td><%=@cat.birth_date%></td>
  </tr>
  <tr>
    <th>Sex:</th>
    <td><%=@cat.sex%></td>
  </tr>
  <tr>
    <th>Age:</th>
    <td><%=@cat.age%></td>
  </tr>
  <tr>
    <th>Color:</th>
    <td><%=@cat.color%></td>
  </tr>
  <tr>
    <th>Description:</th>
    <td><%=@cat.description%></td>
  </tr>
</table>

<h3>REQUESTED DATES</h3>
<ul>
  <% @requests.each do |request| %>
  <li>
    <%= request.start_date %> - <%= request.end_date %>
  </li>
  <% end %>
</ul>
