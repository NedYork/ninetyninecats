<% if cat.persisted? %>
  <% action = cat_url %>
<% else %>
  <% action = cats_url %>
<% end %>


<form action="<%= action %>" method="post">
  <% if cat.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="cat_name">Cat name</label>
  <input
    type="text"
    id="cat_name"
    name="cat[name]"
    value="<%= cat.name %>">
  <br><br><br>
  <label for="cat_birth_date">Cat birthdate</label>
  <input
    type="date"
    id="cat_birth_date"
    name="cat[birth_date]"
    value="<%= cat.birth_date %>">

  <br><br><br>
  <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
  <label for="cat_sex_female">Female</label>
  <br>

  <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
  <label for="cat_sex_male">Male</label>
  <br><br><br>

  <label for="cat_color">Cat color</label>
  <select name="cat[color]" id="cat_color">
    <option value="red">Red</option>
    <option value="black">Black</option>
    <option value="brown">Brown</option>
    <option value="yellow">Yellow</option>
    <option value="white">White</option>
  </select>
  <br> <br> <br>

  <label for="cat_description">
    <textarea name="cat[description]"><%= cat.description %></textarea>
  </label>
  <br> <br> <br>

  <button>Submit</button>
</form>
